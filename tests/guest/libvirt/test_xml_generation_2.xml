<domain type="kvm">
  <name>tester</name>
  <memory>1048576</memory>
  <currentMemory>1048576</currentMemory>
  <uuid>%s</uuid>
  <clock offset="utc"/>
  <vcpu>1</vcpu>
  <features>
    <acpi/>
    <apic/>
    <pae/>
  </features>
  <os>
    <type>hvm</type>
    <boot dev="hd"/>
    <kernel>kernel option</kernel>
    <initrd>initrd option</initrd>
    <cmdline>command line</cmdline>
  </os>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>destroy</on_reboot>
  <on_crash>destroy</on_crash>
  <devices>
    <graphics type="vnc" port="-1"/>
    <interface type="bridge">
      <source bridge="%s"/>
      <mac address="52:54:00:04:cc:a6"/>
      <model type="virtio"/>
    </interface>
    <input bus="ps2" type="mouse"/>
    <serial type="pty">
      <target port="0"/>
    </serial>
    <serial type="tcp">
      <source host="127.0.0.1" mode="bind" service="%s"/>
      <protocol type="raw"/>
      <target port="1"/>
    </serial>
    <disk device="disk" type="file">
      <target bus="virtio" dev="vda"/>
      <source file="%s"/>
      <driver type="raw" name="qemu"/>
    </disk>
    <disk device="blue" type="file">
      <source file="/var/bin/foo"/>
      <target dev="muni"/>
    </disk>
  </devices>
</domain>
